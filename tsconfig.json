{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "skipLibCheck": true,
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2018",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
  },
  "exclude": ["node_modules", "dist"],
  "include": ["custom.d.ts", "**/*.ts", "**/*.js"]
}
